---
import GlobalLayout from "../layouts/GlobalLayout.astro";
import GenerateView from "../components/GenerateView";
---

<GlobalLayout title="Generuj fiszki - Fiszki AI">
  <div class="max-w-4xl mx-auto">
    <header class="mb-8 text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Generuj fiszki z AI</h1>
      <p class="text-gray-600">Wklej tekst źródłowy i pozwól AI wygenerować fiszki do nauki</p>
    </header>

    <GenerateView client:load />
  </div>
</GlobalLayout>
