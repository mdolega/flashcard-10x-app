---
import GlobalLayout from "../layouts/GlobalLayout.astro";
import { DashboardCards } from "../components/DashboardCards.tsx";
import { FlashcardsTable } from "../components/FlashcardsTable.tsx";

// Server-side auth check
const isAuthenticated = Astro.cookies.has("sb-access-token");

if (!isAuthenticated) {
  return Astro.redirect("/auth?mode=login");
}
---

<GlobalLayout title="Twoje fiszki - Fiszki AI">
  <div class="space-y-6">
    <!-- Header with stats -->
    <div class="bg-white shadow-sm rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Twoje fiszki</h1>
          <p class="text-gray-600 mt-1">Zarządzaj swoimi fiszkmi i śledź postępy</p>
        </div>
        <a
          href="/generate"
          class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          aria-label="Generuj nowe fiszki"
        >
          + Generuj fiszki
        </a>
      </div>
    </div>

    <!-- Dashboard Cards Component -->
    <DashboardCards client:load />

    <!-- Flashcards Table Component -->
    <div class="bg-white shadow-sm rounded-lg">
      <FlashcardsTable client:load />
    </div>
  </div>
</GlobalLayout>
